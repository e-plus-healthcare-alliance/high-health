# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# VARIANTS
POST /variantsets/search            controllers.variants.VariantMethods.searchVariantSets()
POST /variants/search               controllers.variants.VariantMethods.searchVariants()
POST /callsets/search               controllers.variants.VariantMethods.searchCallSets()
GET /callsets/:id                   controllers.variants.VariantMethods.getCallSet(id:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
